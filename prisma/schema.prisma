datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Order {
  id        String      @id @default(uuid())
  status    OrderStatus
  total     Decimal     @db.Decimal(30, 2)
  createdAt DateTime    @default(now())

  @@index([status])
}

model OutboxEvent {
  id          String    @id @default(uuid())
  aggregateId String
  type        String
  payload     Json
  processedAt DateTime?
  createdAt   DateTime  @default(now())

  @@index([processedAt])
}

enum OrderStatus {
  PENDING
  PAID
  CANCELLED
  SHIPPED
}
